{
    "env": {
        "browser": true,
        "es6": true,
        "jest": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": [
            "error",
            {
              "singleQuote": true,
              "tabWidth": 4,
              "trailingComma": "all"
            }
        ]
    },
    "globals": {
        "shallow": true,
        "mount": true
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
